<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_heading">
        <item name="android:textSize">@dimen/main_heading</item>
        <item name="android:fontFamily">@font/sora_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="para">
        <item name="android:textSize">@dimen/para_dimen</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:text">@string/para1</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/button_dimen</item>
        <item name="android:fontFamily">@font/sora_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:text">Get Started</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>